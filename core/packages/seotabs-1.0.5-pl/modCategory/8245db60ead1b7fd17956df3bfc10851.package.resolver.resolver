<?php
/**
 * @var array $options
 */

if ($object->xpdo) {
    /** @var modX $modx */
    $modx =& $object->xpdo;
    switch ($options[xPDOTransport::PACKAGE_ACTION]) {
        case xPDOTransport::ACTION_INSTALL:
        case xPDOTransport::ACTION_UPGRADE:
            $modx->addExtensionPackage('seotabs', '[[++core_path]]components/seotabs/model/');
            break;
        case xPDOTransport::ACTION_UNINSTALL:
            $modx->removeExtensionPackage('seotabs');
            break;
    }
}
return true;